{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": ["airbnb-base"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["warn", 4],
        "quotes": ["error", "single"],
        "semi": ["error", "never"],
        "no-alert": "warn",
        "no-console": 1,
        "comma-dangle": [0],
        "arrow-parens": [0],
        "object-curly-spacing": ["warn", "always"],
        "array-bracket-spacing": ["warn", "always"],
        "import/prefer-default-export": [0],
        "consistent-return": "off"
    }
}
